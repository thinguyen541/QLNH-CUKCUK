<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="MainBackgroundColor">#313866</Color>
    <Color x:Key="MainControllColor">#50409a</Color>
    <Color x:Key="MainBorderColor">#D9d9d9</Color>
    <Color x:Key="MainPageColor1">#964ec2</Color>
    <Color x:Key="WhiteColor">#ffffff</Color>
    <Color x:Key="MainPageColor2">#ff7bbf</Color>
    <!-- Define SolidColorBrushes using the colors -->
    <SolidColorBrush x:Key="MainBackground" Color="{StaticResource MainBackgroundColor}" />
    <SolidColorBrush x:Key="MainControll" Color="{StaticResource MainControllColor}" />
    <SolidColorBrush x:Key="MainPage" Color="{StaticResource MainPageColor1}" />
    <SolidColorBrush x:Key="White" Color="{StaticResource WhiteColor}" />
</ResourceDictionary>